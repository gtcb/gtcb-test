<%- include('../partials/header'); %>

<div class= "jumbotron">
    <h1>Login</h1>
</div>
</header>

<main>
	<div style="width: 30%;margin: 25px auto;">
		<h1>Log In to Admin Control</h1>
		<p>Only Admins have access to login!</p>
		<form action="/login" method="POST">
			<div class="form-group">
				<h3>Username: <input type="text" name="username" placeholder="username"></h3>
			</div>
			<div class="form-group">
				<h3>Password: <input type="password" name="password" placeholder="password"></h3>
			</div>
			<div class="form-group">
				<button class="btn btn-primary btn-lg">Sign In</button>
			</div>
			<div class="form-group">
				<a class="btn btn-primary btn-md" href="/forgot">Forgot Password</a>
			</div>
		</form>
	</div>
</main>

<%- include('../partials/footer'); %>